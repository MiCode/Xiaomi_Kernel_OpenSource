+static int do_force_gpu(struct domain *d)
+{
+    struct domain *curr_dom = d;
+    struct domain *prev_dom;
+    bool prev_dom_lock = false;
+    bool domain_paused = false;
+    int res = 0;
+
+    printk(XENLOG_DEBUG "%s\n", __func__);
+    printk(XENLOG_ERR "Force GPU to dom%u\n", curr_dom->domain_id);
+
+    if (is_hardware_domain(get_domain_by_id(prev_dom_id)) ||
+        prev_dom_id == NULL_DOMAIN_ID)
+        prev_dom = current->domain;
+    else {
+        prev_dom = rcu_lock_domain_by_id(prev_dom_id);
+        if (prev_dom)
+            prev_dom_lock = true;
+         else
+            printk(XENLOG_DEBUG "Guest domain destroyed\n");
+   }
+
+    /* If the domain hasn't changed and this is not the first time through then
+     * skip re-assigning of the GPU. Note: It is important to not skip the
+     * first time through to ensure the SMMU is setup correctly to enable DOM0
+     * access */
+    if ((prev_dom_id != NULL_DOMAIN_ID) &&
+        (prev_dom && (curr_dom->domain_id == prev_dom->domain_id)))
+        goto out;
+
+    if (prev_dom) {
+        if (prev_dom != current->domain) {
+            domain_pause(prev_dom);
+            domain_paused = true;
+        }
+        if (prev_dom->gpu_iomem.first_mfn == 0) {
+            res = dt_arb_gpu_process(prev_dom, NULL);
+            if (res) {
+                printk(XENLOG_ERR "ARB GPU - failed to read host Regs/IRQ information from DT (%d)\n", res);
+                goto out;
+            }
+        }
+
+        mali_disable_interrupts(current->domain);
+        res = disable_irq(prev_dom);
+        if (res)
+        {
+            printk(XENLOG_ERR "Disabling dom%u irq failed\n",
+                prev_dom->domain_id);
+            goto out;
+        }
+
+        gic_disable_irqs_from_gpu(prev_dom);
+        vgic_remove_queued_interrupts(prev_dom);
+
+        /* Catch memory accesses to define a 'dummy' region */
+        register_mmio_handler(prev_dom,
+                              &dummy_mmio_handler,
+                              PFN_PHYS(d->gpu_iomem.first_gfn),
+                              PFN_PHYS(d->gpu_iomem.mfns_no),
+                              NULL);
+        res = disable_iomem(prev_dom);
+        if (res)
+        {
+            printk(XENLOG_ERR "Disabling dom%u iomem failed\n",
+                prev_dom->domain_id);
+            goto out;
+        }
+    }
+
+    res = reset_gpu(current->domain);
+    if (res)
+    {
+        printk(XENLOG_ERR "GPU reset failed\n");
+        goto out;
+    }
+    if (domain_paused) {
+        domain_unpause(prev_dom);
+        domain_paused = false;
+    }
+    res = enable_iomem(curr_dom);
+    if (res)
+    {
+        printk(XENLOG_ERR "Enabling dom%u iomem failed\n",
+            curr_dom->domain_id);
+        goto out;
+    }
+    res = enable_irq(curr_dom);
+    if (res)
+    {
+        printk(XENLOG_ERR "Enabling dom%u irq failed\n",
+            curr_dom->domain_id);
+        goto out;
+    }
+    res = iommu_switch_device(curr_dom);
+    if (res)
+    {
+        printk(XENLOG_ERR "SMMU transaction failed\n");
+        goto out;
+    }
+    prev_dom_id = curr_dom->domain_id;
+out:
+    if (domain_paused)
+        domain_unpause(prev_dom);
+    if(prev_dom_lock)
+        rcu_unlock_domain(prev_dom);
+    return res;
+}
+
+
+int do_arb_gpu_op(XEN_GUEST_HANDLE_PARAM(xen_arb_gpu_op_t) u_xenarb_op)
+{
+    int ret = 0;
+    struct xen_arb_gpu_op curop, *op = &curop;
+    struct domain *d;
+
+    if ( copy_from_guest(op, u_xenarb_op, 1) )
+    {
+        printk(XENLOG_ERR "%s: copy_from_guest failed\n", __func__);
+        return -EFAULT;
+    }
+    if ( op->interface_version != XENARBGPU_INTERFACE_VERSION )
+    {
+        printk(XENLOG_ERR "%s: wrong interface version\n", __func__);
+        return -EACCES;
+    }
+    d = rcu_lock_domain_by_id(op->domain);
+    if ( d == NULL )
+    {
+        printk(XENLOG_ERR "%s: unable to lock domain\n", __func__);
+        return -ESRCH;
+    }
+    if ( !is_hardware_domain(current->domain) )
+        return -EPERM;
+
+    switch ( op->cmd )
+    {
+    case ARB_HYP_ASSIGN_VM_GPU:
+        ret = do_assign_gpu(d);
+        break;
+    case ARB_HYP_FORCE_ASSIGN_VM_GPU:
+        ret = do_force_gpu(d);
+        break;
+    default:
+        ret = -ENOSYS;
+        break;
+    }
+
+    rcu_unlock_domain(d);
+    return ret;
+}
