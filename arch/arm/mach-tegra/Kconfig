config TEGRA_SYSTEM_DMA
	bool "Enable system DMA driver for NVIDIA Tegra SoCs"
	default y
	help
	  Adds system DMA functionality for NVIDIA Tegra SoCs, used by
	  several Tegra device drivers

config TEGRA_PWM
	tristate "Enable PWM driver"
	select HAVE_PWM
	help
	  Enable support for the Tegra PWM controller(s).

config TEGRA_FIQ_DEBUGGER
	bool "Enable the FIQ serial debugger on Tegra"
	default n
	select FIQ_DEBUGGER
	help
	  Enables the FIQ serial debugger on Tegra

config TEGRA_PTM
	bool "Enable PTM debugger on Tegra"
	default n
	help
	  This option enables PTM debugger on Tegra. This driver is used
	  for tracking each branch instructions executed by processor. It
	  can save such tracking information to the ETB buffer, which can
	  be further parsed by a user space program to re-construct the
	  complete program flows.

config TEGRA_P1852_TDM
	bool "Enable TDM mode for P1852 SKUs"
	default n
	depends on MACH_P1852
	help
		Enables TDM mode driver for P1852 SKUs. If this
		is not defined then I2S mode is selected by default.

