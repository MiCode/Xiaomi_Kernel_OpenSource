	bool "Enable support for Tegra20 family"
	depends on !ARCH_TEGRA_3x_SOC
	depends on !ARCH_TEGRA_11x_SOC
	depends on !ARCH_TEGRA_12x_SOC
	depends on !ARCH_TEGRA_14x_SOC
